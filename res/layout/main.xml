<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <Button
      android:text="Call &amp; Interrupt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCallIntClick"
      />
  <Button
      android:text="Call"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCallClick"
      />
  <Button
      android:text="Crash Activity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCrashClick"
      />
  <Button
      android:text="Crash Provider with Client"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCrashProviderWithClientClick"
      />
</LinearLayout>

